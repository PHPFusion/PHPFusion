{#hidden at default#}
{% set ariaStatus = '' %}
{% if options.static != true %}
    {% set ariaStatus = 'aria-labelledby="exampleModalLabel" aria-hidden="true"' %}
{% endif %}

{#Animated modal#}
{% set adnimated = '' %}
{% if options.animate %}
    {% set animated = 'fade' %}
{% endif %}

{% if openmodal %}
<div class="modal{{ whitespace(animated) }}{{ whitespace(modal_class) }}" id="{{ id }}-Modal" tabindex="-1" role="dialog"{{ whitespace(ariaStatus) }}>
    <div class="modal-dialog modal-dialog-centered {{ class_dialog }}" role="document">
        <div class="modal-content">
            {% if title %}
                <div class="modal-header">
                    {% if dismissable == 1 %}
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    {% endif %}
                    <h5 class="modal-title">{{ title }}</h5>
                </div>
            {% endif %}

            <div class="modal-body">
                {% endif %}

                {% if modalfooter %}
            </div>
            <div class="modal-footer">
                {{ content|raw }}
                <button type="button" class="btn btn-primary">Save changes</button>
                {% if dismissable %}
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {% endif %}
            </div>
            {% endif %}
            {% if closemodal %}
        </div>
    </div>
</div>
{% endif %}
