{#Header#}
{% set navbar_header = '' %}
{% if banner and banner_position and banner_link %}
    {% set navbar_header = '<a class="navbar-brand'~whitespace(banner_position)~whitespace(banner_class)~'" href="'~banner_link~'"><img src="'~banner~'" alt="'~banner_title~'"></a>'~header_content %}
{% endif %}

{#Affix Option#}
{% set affix = '' %}
{% if affix_top or affix_bottom %}
    {% set affix = ' data-spy="affix"' %}
    {% if affix_top %}
        {% set affix = affix ~ ' data-offset-top="'~affix_top~'"' %}
    {% endif %}
    {% if affix_bottom %}
        {% set affix = affix ~ ' data-offset-bottom="'~affix_bottom~'"' %}
    {% endif %}
{% endif %}

{#Container Class#}
{% set openContainer = '' %}
{% set closeContainer = '' %}
{% if container %}
    {% set openContainer = '<div class="container">' %}
    {% set closeContainer = '</div>' %}
{% elseif (container_fluid) %}
    {% set openContainer = '<div class="container-fluid">' %}
    {% set closeContainer = '</div>' %}
{% endif %}

{#Recursive list function#}
{% macro menu_links(links, index = 0) %}
    {% import _self as macros %}
    {% for link in links[index] %}
        {# where this has a child item#}
        {% set linkActive = '' %}
        {% if link.link_active %}
            {% set linkActive = 'active' %}
        {% endif %}

        {% if links[link.link_id] %}
            {% set listClass = link.link_cat > 0 ? 'dropdown-submenu' : 'nav-item dropdown' %}
            {% set aClass = link.link_cat > 0 ? 'dropdown-item' : 'nav-link' %}
            {% set linkWindow = link.link_window == 1 ? 'target="_blank" ' : '' %}

            <li class="{{ listClass }}{{ whitespace(linkActive) }}">
                <a class="{{ aClass }} dropdown-toggle" href="{{ link.link_url }}" id="{{ link.link_id }}Dropdown"{{ whitespace(linkWindow) }} role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ link.link_name }}</a>
                <ul class="dropdown-menu" aria-labelledby="{{ link.link_id }}Dropdown">
                    {{ macros.menu_links(links, link.link_id) }}
                </ul>
            </li>
        {% elseif link.link_cat >0 %}
            {#where this is a subitem#}
            <a class="dropdown-item" href="#">{{ link.link_name }}</a>
        {% else %}
            {#where this is a top level item#}
            <li class="nav-item{{ whitespace(linkActive) }}">
                <a class="nav-link" href="{{ link.link_url }}">{{ link.link_name }}</a></li>
        {% endif %}
    {% endfor %}
{% endmacro %}

<nav id="{{ id }}" class="navbar{{ whitespace(navbar_class) }}" role="navigation" {{ affix|raw }}>
    {{ openContainer|raw }}
    {{ navbar_header|raw }}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#{{ navbar_id }}_menu" aria-controls="{{ navbar_id }}_menu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse{{ whitespace(responsive_class) }}" id="{{ navbar_id }}_menu">
        {{ html_pre_content|raw }}
        <ul class="navbar-nav mr-auto{{ whitespace(nav_class_primary) }}">
            {{ _self.menu_links(callback_data) }}
        </ul>
        {{ html_content|raw }}
        {{ search|raw }}
        {% if additional_data or language %}
            <ul class="navbar-nav navbar-right ml-auto {{ whitespace(nav_secondary_class) }}">
                {#                language options#}
                {% if language %}
