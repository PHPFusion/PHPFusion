            </ul>
        {% endif %}
        {% if login %}
            <span class="navbar-text ml-auto">
                {% if logout %}
                    {% if admin %}
                        <a class="btn btn-dark mr-3" href="{{ admin.link }}">{{ admin.title }}</a>
                    {% endif %}
                    <a class="btn btn-secondary" href="{{ logout.link }}">{{ logout.title }}</a>
                {% else %}
                    <a class="btn btn-primary mr-3 strong" href="{{ login.link }}">{{ login.title }}</a>
                    <a class="btn btn-secondary strong" href="{{ register.link }}">{{ register.title }}</a>
                {% endif %}
            </span>
        {% endif %}
        {{ html_post_content }}
    </div>
    {{ closeContainer|raw }}
</nav>

{#bootstrap submenu-mods#}
<script>
    $('.dropdown-menu a.dropdown-toggle').on('click', function (e) {
        if (!$(this).next().hasClass('show')) {
            $(this).parents('.dropdown-menu').first().find('.show').removeClass('show');
        }
        var $subMenu = $(this).next('.dropdown-menu');
        $subMenu.toggleClass('show');
        $(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function (e) {
            $('.dropdown-submenu .show').removeClass('show');
        });
        return false;
    });
</script>
<style>
    .dropdown-submenu {
        position: relative;
    }

    .dropdown-submenu a::after {
        transform: rotate(-90deg);
        position: absolute;
        right: 6px;
        top: .8em;
    }

    .dropdown-submenu .dropdown-menu {
        top: 0;
        left: 100%;
        margin-left: .1rem;
        margin-right: .1rem;
    }
</style>
